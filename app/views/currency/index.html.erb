<h1>Convert World Currencies</h1>
<%= form_tag('currency', method: 'get') do %>
  <p>
    <%= label_tag(:from, "Convert from:") %>
    <%= collection_select(:from, :currency_id,
                          @currencies, :id, :name) %>
  </p>
  <p>
    <%= label_tag(:to, "Convert to:") %>
    <%= collection_select(:to, :currency_id,
                          @currencies, :id, :name) %>
  </p>
  <p>
    <%= label_tag(:amount) %>
    <%= text_field_tag(:amount) %>
  </p>
  <%= submit_tag("Convert") %>
<% end %>

<% if @converted_amount %> 
  <p id="conversion_result">
    <%= @amount %> <%= @currency_from.name %> =
    <%= number_with_precision(@converted_amount, precision: 5) %>
    <%= @currency_to.name %>
  </p>
<% end %>
